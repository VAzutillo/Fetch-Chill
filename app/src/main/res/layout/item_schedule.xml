<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerViewAppointments"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@color/bg_color"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Today at "
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart= "90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="8:30 am"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAppointmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart= "190dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Pending"
            android:clickable="false"
            android:focusable="false"
            android:textColor="@color/tertiary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Feb, 27 2025 "
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"/>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/tertiary3"
            android:layout_marginTop="50dp"

            android:layout_gravity="center"
            android:translationZ="4dp">

            <ImageView
                android:id="@+id/imgAppointmentService"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vaccineimg"/>

            <TextView
                android:id="@+id/tvAppointmentService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Grooming"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </FrameLayout>
    </FrameLayout>
</LinearLayout>