<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tertiary3"
    tools:context=".FragmentFaq">

    <ImageView
        android:id="@+id/backToSetting"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:background="@drawable/back_button"
        android:contentDescription="Back Button"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexenddeca_regular"
        android:text="About Us"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginStart="125dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Emergencies can be scary, but staying calm and knowing what to do can save your pet’s life. Here’s a quick guide to handling pet emergencies—and don’t forget, Fetch&amp;Chill helps you track vet records, so you’ll always have important health info on hand!"
                android:textColor="@color/grey"
                android:textSize="12sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="General Emergencies"
                android:textColor="@color/tertiary1"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="99dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="1.How do I know if my pet is having a medical emergency?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="We know life get’s busy, and keeping up with your pet’s care can be a challenge--that’s where Fetch&amp;Chill comes in! Our app helps fur parent’s schedule grooming, vaccinations, trainings, and health check-ups with ease."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="2. My pet ate something toxic! What now?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="49dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="We know life get’s busy, and keeping up with your pet’s care can be a challenge--that’s where Fetch&amp;Chill comes in! Our app helps fur parent’s schedule grooming, vaccinations, trainings, and health check-ups with ease."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Injuries &amp; First Aid"
                android:textColor="@color/tertiary1"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="105dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="3. What should I do if my pet is bleeding?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Apply gentle pressure with a clean cloth to stop the bleeding. If it doesn’t stop in 10 minutes or the wound is deep, use Fetch&amp;Chill to check their last vaccination records (like tetanus) and head to the vet ASAP."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="4.My pet broke a bone—how do I help them?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Keep them as still as possible. Don’t try to move or straighten the bone—just wrap the area in a soft cloth and check Fetch&amp;Chill for their vet’s details."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="5.What if my pet gets burned?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Run cool (not ice-cold) water over the burned area for a few minutes. Avoid ointments or creams—just cover it with a clean cloth and call the vet."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Sickness &amp; Other Emergencies"
                android:textColor="@color/tertiary1"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="6.My pet is having a seizure—what should I do?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Stay calm and move objects away so they don’t hurt themselve"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Don’t touch their mouth—they won’t swallow their tongue."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Time the seizure—if it lasts over 2 minutes, they need emergency care."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•After the seizure, keep them warm and check Fetch&amp;Chill for their medical history before calling the vet."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="7.My pet is overheating—how do I cool them down?"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Move them to a cool place immediately."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="43dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Give them cool (not ice-cold) water to drink."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="31dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•Wet a towel with cool water and gently wipe their belly, paws, and ears."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="•If they’re still weak or panting heavily, check Fetch&amp;Chill for vet info and head there right away."
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="When to Call the Vet"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="105dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Use Fetch&amp;Chill’s appointment manager to book a visit if your pet has:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Difficulty breathing"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="102dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Uncontrolled bleeding"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginEnd="95dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Vomiting or diarrhea for more than 24 hours"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginEnd="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Severe pain (whining, not moving)"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginEnd="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="A swollen belly or trouble peeing"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginEnd="65dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Been hit by a car or had a serious fall"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:layout_marginEnd="52dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="If it’s urgent, don’t wait—call the vet immediately!"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Stay Prepared with Fetch&amp;Chill!"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="68dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Save your vet’s contact info in the app for quick access."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Track your pet’s medical history so you always have their records on hand."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Set reminders for vaccinations and checkups to prevent emergencies before they happen."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Emergencies are scary, but Fetch&amp;Chill helps you stay prepared, so you can focus on keeping your furry friend safe and happy!"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>