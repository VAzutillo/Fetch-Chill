<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@color/bg_color"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Today at "
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvAppointmentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="8:30 am"
            android:textSize="20sp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvAppointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Feb, 27 2025 "
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"/>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:translationZ="4dp">

            <ImageView
                android:id="@+id/imgAppointmentService"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vaccineimg"/>

            <TextView
                android:id="@+id/tvAppointmentService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="Grooming"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

        </FrameLayout>


    </FrameLayout>

</LinearLayout>