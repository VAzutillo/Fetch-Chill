<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tertiary3"
    tools:context=".FragmentAccountInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/backToSetting"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:background="@drawable/back_button"
            android:contentDescription="Back Button"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca_regular"
            android:text="Account Information"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>


        <FrameLayout
            android:id="@+id/EditFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_corner_radius"
            android:translationZ="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/lexenddeca_regular"
                android:gravity="center"

                android:text="Email loading..."
                android:textAppearance="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </FrameLayout>

    </LinearLayout>



</FrameLayout>